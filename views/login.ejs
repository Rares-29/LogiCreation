<%- include ("./partials/header", {auth:auth, money: money}) %>
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="/register" method = "POST" enctype = "multipart/form-data">
			<h1>Inregistrare</h1>
			<input type="text" name = "username" placeholder = "User">
            <input type="password" id = "password" onkeyup = "verifyPassword(this.value)"  name = "password" placeholder = "Parola">
			<p id = "message" style = "display: none"></p>

            <input type="password" onkeyup = "matchingPassword(this.value)" name = "confirmation" placeholder = "Confirma parola">
			<p id = "message2" style = "display: none"></p>

            <input type="name" name = "name" placeholder = "Nume de Familie">
            <input type="fname" name = "fname" placeholder = "Prenume">
            <label for="image">Upload Image</label>
            <input type="file" id="image" name="image" value="" required>
            <label>Esti muncitor?</label>
            <input type="checkbox" id = "checkbox" name = "checkbox">
            <select size = "15" name = "meserie">
                <option class = "disabled" value="select">Meserie</option>
                <% meserii.forEach(item => { %>
                    <option value= <%= item %> ><%= item %></option>
                    <% }); %>                
            </select>
            <input class = "hidden" style = "margin-bottom: 20px" id = "price" type="number" name = "price" placeholder = "Pret/ora ">
            <button type = "submit">Inregistreaza-te</button>

		</form>
	</div>
	<div class="form-container sign-in-container">
		<form action="/login" method = "POST">
			<h1>Autentificare</h1>
			<span>sau creeaza-ti un cont nou</span>
			<input type="text" name = "username" placeholder="User" />
			<input type="password" name = "password" placeholder="Parola" />
			<a href="/password">Ti-ai uitat parola?</a>
			<button>Autentificare</button>
		</form>
	</div>

	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Bine ai venit!</h1>
				<p>Te rugam sa te inregistrezi cu datele personale</p>
				<button class="ghost" id="signIn">Autentificare</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Salut, prietene!</h1>
				<p>Introdu-ti datele de autentificare si exploreaza lumea meseriasilor</p>
				<button class="ghost" id="signUp">Inregistrare</button>
			</div>
		</div>
	</div>
</div>
<script src = "./index.js"></script>
<script src = "./index2.js"></script>

<%- include("./partials/footer") %>